<ul class="posts">

  {% assign sorted_posts = (posts_collate | sort: 'title') %}

  {% for post in sorted_posts %}
  	
  	<!-- Add a dash if there is a tagline -->
    {% assign spacer = "-" %}
    {% if post.tagline == "" %}
        {% assign spacer = "" %}
    {% endif %}

    <li><a href="{{ BASE_PATH }}{{ post.url }}">{{ post.title }} {{ spacer }} <i>{{ post.tagline }}</i></a></li>
  {% endfor %}
</ul>